<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/flowContainer_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/mainFlowBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_navigation_background"
        app:itemIconTint="@drawable/selector_item_main_bottom_tabs"
        app:itemTextAppearanceActive="@style/TextAppearance.Regular.14"
        app:itemTextAppearanceInactive="@style/TextAppearance.Regular.12"
        app:itemTextColor="@drawable/selector_item_main_bottom_tabs"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_main_bottom_tabs" />
</FrameLayout>