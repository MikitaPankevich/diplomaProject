<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/patientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Regular.18.Black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mikitasdasdg" />

    <TextView
        android:id="@+id/patientSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/TextAppearance.Regular.18.Black"
        app:layout_constraintStart_toEndOf="@id/patientName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pankevichddasdsad" />

    <TextView
        android:id="@+id/patientEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/patient_email"
        android:textAppearance="@style/TextAppearance.Regular.18.Black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patientName" />

    <TextView
        android:id="@+id/patientEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TextAppearance.Regular.18.Black"
        app:layout_constraintStart_toEndOf="@id/patientEmailLabel"
        app:layout_constraintTop_toTopOf="@id/patientEmailLabel"
        tools:text="adsteasd@gmail.com" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/patientShowHistoryButton"
        style="@style/Widget.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="110dp"
        android:gravity="center"
        android:text="@string/patient_show_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/patientEmailLabel" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="1dp"
        android:background="@color/blue_nuke_end"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/patientShowHistoryButton" />

</androidx.constraintlayout.widget.ConstraintLayout>